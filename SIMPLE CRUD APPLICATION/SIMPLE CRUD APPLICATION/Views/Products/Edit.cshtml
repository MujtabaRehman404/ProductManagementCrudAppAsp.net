@model SIMPLE_CRUD_APPLICATION.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit a Product</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" style="margin-bottom:5px;" class="control-label"></label>
                <input asp-for="Name" style="margin-bottom:5px;" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" style="margin-bottom:5px;" class="control-label"></label>
                <input asp-for="Description" style="margin-bottom:5px;" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" style="margin-bottom:5px;" class="control-label"></label>
                <input asp-for="Category" style="margin-bottom:5px;" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" style="margin-bottom:5px;" class="control-label"></label>
                <input asp-for="Price" style="margin-bottom:5px;" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" style="margin-top:10px;margin-bottom:10px;" class="btn btn-outline-dark"><i class="fa fa-pencil"></i>  Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="text-decoration:none;">
        <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
